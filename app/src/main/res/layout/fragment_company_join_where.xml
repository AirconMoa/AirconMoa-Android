<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_login_progress"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">


        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/estimate_btn_back"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textColor="@color/airconmoa_gray"
            android:textSize="20sp"
            android:layout_weight="3"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/estimate_btn_close"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/estimate_linear_progress"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/linear_login_progress">

        <ProgressBar
            android:id="@+id/estimate_progress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="336dp"
            android:layout_height="2dp"
            android:max="7"
            android:progress="6"
            android:progressDrawable="@drawable/estimate_progressbar" />

        <TextView
            android:id="@+id/estimate_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="6/7"
            android:textColor="#D9D9D9"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/estimate_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/estimate_linear_progress">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="어디서 운영하고 계세요?"
            android:textColor="@color/airconmoa_gray"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="업체가 위치한 주소를 입력해 주세요."
            android:textColor="@color/airconmoa_gray3"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/estimate_name_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/estimate_name_text"
        android:layout_marginTop="120dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/btn_location_si"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/txt_si"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="선택"
                        android:text=""
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/airconmoa_gray2"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/company_join_location"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#CDD3D9"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <LinearLayout
                    android:id="@+id/btn_location_do"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/txt_do"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="선택"
                        android:text=""
                        android:gravity="center|left"
                        android:paddingLeft="10dp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/airconmoa_gray2"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/company_join_location"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#CDD3D9"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_weight="2">

                <EditText
                    android:id="@+id/txt_location_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="입력"
                    android:textColorHint="@color/airconmoa_gray2"
                    android:layout_marginRight="20dp"
                    android:textStyle="bold"

                    android:textColor="@color/airconmoa_gray"
                    android:layout_marginLeft="20dp"
                    android:background="@android:color/transparent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#CDD3D9"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:text="다음"
            android:enabled="false"
            android:background="@drawable/company_next_btn_selector"
            android:textColor="@color/airconmoa_gray"
            android:fontFamily="@font/semi_bold"
            android:textSize="20sp" />


    </LinearLayout>






</androidx.constraintlayout.widget.ConstraintLayout>