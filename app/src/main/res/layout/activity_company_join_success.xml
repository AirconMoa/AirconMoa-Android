<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.airconmoa.ui.estimate_user.Fragment.UserEstimateFragment">

    <LinearLayout
        android:id="@+id/estiamte_success_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="154dp">

            <TextView
                android:id="@+id/txt_com_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모아님,"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="@color/airconmoa_gray"
                android:textSize="25dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입을 축하합니다!  "
                android:textStyle="bold"
                android:textColor="@color/airconmoa_gray"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/estimate_success"
                android:layout_gravity="center"/>


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/airconmoa_gray2"
            android:textSize="15sp"
            android:text="개인정보는 마이페이지에서 수정 가능합니다."/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btn_next"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:text="모아 홈으로"
            android:enabled="true"
            android:background="@drawable/company_next_btn_selector"
            android:textColor="@color/white"
            android:fontFamily="@font/semi_bold"
            android:textSize="20sp" />


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>