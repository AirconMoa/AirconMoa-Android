<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/estimate_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="에어컨을 설치할\n장소의 유형을 선택해 주세요."
            android:textSize="25sp"
            android:textColor="@color/airconmoa_gray"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_check_install"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/estimate_name_text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="3dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:textColor="@color/airconmoa_gray"
                    android:text="아파트"
                    android:textStyle="bold"
                    android:gravity="left|center"
                    android:padding="20dp"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/estimate_btn_check"
                    android:background="@android:color/transparent"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="30dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="3dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:textColor="@color/airconmoa_gray"
                    android:text="주택"
                    android:textStyle="bold"
                    android:gravity="left|center"
                    android:padding="20dp"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/estimate_btn_check"
                    android:background="@android:color/transparent"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="30dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="3dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:textColor="@color/airconmoa_gray"
                    android:text="빌라"
                    android:textStyle="bold"
                    android:gravity="left|center"
                    android:padding="20dp"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/estimate_btn_check"
                    android:background="@android:color/transparent"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="30dp"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="3dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:textColor="@color/airconmoa_gray"
                    android:text="빌딩"
                    android:textStyle="bold"
                    android:gravity="left|center"
                    android:padding="20dp"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/estimate_btn_check"
                    android:background="@android:color/transparent"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="30dp"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="3dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:textColor="@color/airconmoa_gray"
                    android:text="기타"
                    android:textStyle="bold"
                    android:gravity="left|center"
                    android:padding="20dp"
                    android:textSize="20sp"
                    android:background="@android:color/transparent"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/estimate_btn_check"
                    android:background="@android:color/transparent"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="30dp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>



    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>