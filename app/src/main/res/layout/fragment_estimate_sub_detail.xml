<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.airconmoa.ui.myestimate_user.EstimateSubDetailFragment">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/scrollView">
    <TextView
        android:id="@+id/representationNumTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대표번호"
        android:textSize="13dp"
        android:textColor="@color/airconmoa_gray2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/representationNumEditTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/representationNumTv"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="-1dp"
        android:hint="123-4567-8910"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/companyEmailTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="업체 이메일"
        android:textSize="13dp"
        android:textColor="@color/airconmoa_gray2"
        app:layout_constraintTop_toBottomOf="@id/representationNumEditTv"
        android:layout_marginTop="22dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/companyEmailEditTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/companyEmailTv"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="-1dp"
        android:hint="moa@gmail.com"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/activityAreaTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="활동 지역"
        android:textSize="13dp"
        android:textColor="@color/airconmoa_gray2"
        app:layout_constraintTop_toBottomOf="@id/companyEmailEditTv"
        android:layout_marginTop="22dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/activityAreaEditTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/activityAreaTv"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="-1dp"
        android:hint="인천"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/officeAddressTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사무실 주소"
        android:textSize="13dp"
        android:textColor="@color/airconmoa_gray2"
        app:layout_constraintTop_toBottomOf="@id/activityAreaEditTv"
        android:layout_marginTop="22dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/officeAddressEditTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/officeAddressTv"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="-1dp"
        android:hint="인천 광역시 미추홀구 용현동 123-45"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    
    <Button
        android:id="@+id/installHistoryBtn"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:background="@drawable/shape_btn_main"
        android:text="업체 설치 이력 보러가기"
        android:textColor="@color/white"
        android:fontFamily="@font/semi_bold"
        android:paddingHorizontal="7dp"
        app:layout_constraintTop_toBottomOf="@id/officeAddressEditTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>