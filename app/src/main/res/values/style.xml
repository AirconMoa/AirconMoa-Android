<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SpinnerDivideStyle">
        <!--아이템을 나누는 선 색상-->
        <item name="android:divider">@color/teal_200</item>
        <!--선 높이-->
        <item name="android:dividerHeight">2dp</item>
    </style>

    <style name="SpinnerTheme" parent="Theme.AppCompat">
        <!--spinnerDivideStyle을 먼저 만들어 줘야한다.-->
        <item name="android:dropDownListViewStyle">@style/SpinnerDivideStyle</item>
    </style>

    <style name="customTextSemiBold" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/semi_bold</item>
    </style>

    <style name="EditTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/airconmoa_skyBlue</item>
    </style>
</resources>