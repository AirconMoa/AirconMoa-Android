<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/estimate_terms_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="약관에 동의하시고\n에어컨 견적 요청하세요!"
            android:textSize="25sp"
            android:textColor="@color/airconmoa_gray"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/estimate_terms_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/estimate_terms_text"
        app:layout_constraintStart_toStartOf="@id/estimate_terms_text">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="350dp"
            android:layout_height="60dp"
            app:cardBackgroundColor="@color/airconmoa_gray3"
            android:layout_gravity="center"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/checkall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/estimate_btn_check_false"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="전체 약관에 동의합니다."
                    android:textColor="@color/airconmoa_gray"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/estimate_terms_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/estimate_terms_check_box"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="19dp">

        <LinearLayout
            android:id="@+id/essential_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp">

            <ImageView
                android:id="@+id/check1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/estimate_btn_check_small_false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="개인정보 수집 및 이용 동의(필수)"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:id="@+id/look1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보기"
                    android:layout_marginRight="25dp"
                    android:textSize="13sp"
                    android:textColor="@color/airconmoa_gray2"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/essential_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/check2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/estimate_btn_check_small_false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="사용자 이용약관(필수)"
                android:textColor="#000000"
                android:textSize="13sp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:id="@+id/look2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보기"
                    android:layout_marginRight="25dp"
                    android:textSize="13sp"
                    android:textColor="@color/airconmoa_gray2"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/essential_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/check3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/estimate_btn_check_small_false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="위치정보 서비스 이용약관(필수)"
                android:textColor="#000000"
                android:textSize="13sp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:id="@+id/look3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보기"
                    android:layout_marginRight="25dp"
                    android:textSize="13sp"
                    android:textColor="@color/airconmoa_gray2"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/essential_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/check4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/estimate_btn_check_small_false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="제3자 정보제공 동의(필수)"
                android:textColor="#000000"
                android:textSize="13sp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:id="@+id/look4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보기"
                    android:layout_marginRight="25dp"
                    android:textSize="13sp"
                    android:textColor="@color/airconmoa_gray2"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/check5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/estimate_btn_check_small_false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="맞춤 혜택 개인정보 이용 동의(선택)"
                android:textColor="#000000"
                android:textSize="13sp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:id="@+id/look5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보기"
                    android:layout_marginRight="25dp"
                    android:textSize="13sp"
                    android:textColor="@color/airconmoa_gray2"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/check6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/estimate_btn_check_small_false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="에어컨 맞춤 혜택 정보 수신 동의(선택)"
                android:textColor="#000000"
                android:textSize="13sp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <TextView
                    android:id="@+id/look6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보기"
                    android:layout_marginRight="25dp"
                    android:textSize="13sp"
                    android:textColor="@color/airconmoa_gray2"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/essential_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/check7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/estimate_btn_check_small_false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="만 14세 이상입니다.(필수)"
                android:textColor="#000000"
                android:textSize="13sp"
                android:layout_gravity="center"/>


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>